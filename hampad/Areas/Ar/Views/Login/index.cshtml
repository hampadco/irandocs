@model ViewModels.AdminViewModel.User.Vm_User
<form action="/login/login_check" method="POST">
  @if (ViewBag.err != null)
                                            {
                                               <p class="alert  alert-danger ">@ViewBag.err</p>
                                            }
            <section class="row flexbox-container justify-content-center">
                <div class="col-xl-8 col-12 d-flex justify-content-center">
                    <div class="card bg-authentication rounded-0 mb-0">
                        <div class="row m-0" style="background-image:url('../app-assets/images/icons/sidRight1.png')">

                            <div class="col-lg-6 col-12 p-0">
                                <div class="card rounded-0 mb-0 px-2">
                                    <div class="card-header pb-1">
                                        <div class="card-title">
                                            <h4 class="mb-0">ورود</h4>
                                        </div>
                                    </div>
                                    <p class="px-2">خوش آمدید ، لطفا به حساب کاربری خود وارد شوید</p>
                                    <div class="card-content">
                                        <div class="card-body pt-1">
                                            <form action="/home/login_check">
                                                @if (ViewBag.er!= null)
                                                {
                                                    <p class="alert alert-danger">@ViewBag.er</p>
                                                }
                                                <fieldset class="form-label-group form-group position-relative has-icon-left">
                                                    <input type="text" class="form-control" asp-for="PhoneUs" placeholder="شماره تلفن خود را وارد کنید" required="">
                                                    <div class="form-control-position">
                                                        <i class="feather icon-user"></i>
                                                    </div>
                                                    <label for="user-name">نام کاربری</label>
                                                </fieldset>

                                                <fieldset class="form-label-group position-relative has-icon-left">
                                                    <input type="password" class="form-control" asp-for="PasswordUs" placeholder="کلمه عبور" required="">
                                                    <div class="form-control-position">
                                                        <i class="feather icon-lock"></i>
                                                    </div>
                                                    <label for="user-password">کلمه عبور</label>
                                                </fieldset>
                                                <div class="form-group d-flex justify-content-between align-items-center">
                                                    <div class="text-left">
                                                        <fieldset class="checkbox">
                                                            <div class="vs-checkbox-con vs-checkbox-primary">
                                                                <input type="checkbox">
                                                                <span class="vs-checkbox">
                                                                    <span class="vs-checkbox--check">
                                                                        <i class="vs-icon feather icon-check"></i>
                                                                    </span>
                                                                </span>
                                                                <span class="">مرا به خاطر بسپار</span>
                                                            </div>
                                                        </fieldset>
                                                    </div>
                                                    <div class="text-right"><a href="/login/forget" class="card-link">رمز ورود را فراموش کرده اید؟</a></div>
                                                </div>
                                                <a href="/login/register" class="btn btn-outline-primary float-left btn-inline">ثبت نام</a>
                                                <button type="submit" class="btn btn-primary float-right btn-inline">ورود</button>
                                            </form>
                                        </div>
                                    </div>
                                    <div class="login-footer">
                                        <div class="divider">
                                            <div class="divider-text">یا</div>
                                        </div>



                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6 d-lg-block  text-center align-self-center px-1 py-0">

                                @*<p class="px-2"> لطفا با شبکه های اجتماعی خود وارد شوید</p>*@

                                <div class="footer-btn ">
                                    @* <a href="/provider/Google" class="btn btn-google col-12  "><span class="fa fa-google mr-1"></span> ورود به حساب کاربری با گوگل</a>
                                    <a href="/provider/facebook" class="btn btn-facebook col-12 mt-1"><span class="fa fa-facebook mr-1"></span> ورود به حساب کاربری با فیس بوک</a>
                                    <a href="#" class="btn btn-twitter white col-12 mt-1" name="provider"><span class="fa fa-yahoo mr-1"></span>ورود به حساب کاربری با یاهو</a> *@
<img src="..\..\..\app-assets\images\pages\login.png" alt="branding logo" style="width: 95%;">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            </form>

        </div>
    </div>
