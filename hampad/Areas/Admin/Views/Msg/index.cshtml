                    @foreach (var item in  @ViewBag.msg)
                    {
                        <li class="media mail-read">
                        <div class="media-left pr-50">
                            <div>
                                <img src="~/app-assets/images/icons/alert.png" alt="avtar img holder" style="width: 50px;">
                            </div>
                            <div class="user-action">
                                <div class="vs-checkbox-con">
                                    <input type="checkbox">
                                    <span class="vs-checkbox vs-checkbox-sm">
                                      <span class="vs-checkbox--check">
                                        <i class="vs-icon feather icon-check"></i>
                                      </span>
                                    </span>
                                </div>
                                <span class="favorite"><i class="feather icon-star"></i></span>
                            </div>
                        </div>
                        <div class="media-body">
                            <div class="user-details">
                                <div class="mail-items">
                                    <h5 class="list-group-item-heading text-bold-600 mb-25">@item.namesender</h5>
                                    <span class="list-group-item-text text-truncate">SevenStar</span>
                                </div>
                                <div class="mail-meta-item">
                                    <span class="float-right">
                                        <span class="mr-1 bullet bullet-success bullet-sm"></span>
                                        <span class="mail-date">@item.DateMess</span>
                                         <a href="/admin/msg/Details/@item.Id" class="btn btn-primary btn-sm">مشاهده</a>
                                         @if (item.StateMess==false)
                                         {
                                             <a  class="btn btn-warning btn-sm" style="color: white;">خوانده نشده</a>
                                         }else
                                         {
                                             <a  class="btn btn-success btn-sm" style="color: white;">خوانده شده</a>
                                         }
                                      
                                       
                                    </span>
                                   
                                     
                                </div>
                                
                            </div>
                            
                            <div class="mail-message">
                                <p class="list-group-item-text truncate mb-0">
                                    @item.SubjectMess
                                    </p>
                                     <a href="/admin/msg/del/@item.Id" onclick="return confirm('آیا از حذف مطمئن هستید؟')"><i class="feather icon-trash"></i></a>
                            </div>
                        </div>
                    </li>
                    }
                    
                  
                </ul>
