<!-- BEGIN: Content-->
<section id="data-list-view" class="data-list-view-header">
  <!-- DataTable starts -->
  @if (ViewBag.er != null)
  {
  <p class="alert alert-success">@ViewBag.er</p>
  }
  <div class="table-responsive">
    <table class="table data-list-view">
      <thead>
        <tr>
          <th></th>
          <th>ردیف</th>
          <th> عنوان محصول </th>
          <th> دسته بندی </th>
          <th> تصویر محصول </th>
          <th> قیمت </th>
          <th> درصد تخفیف</th>
          <th> زبان</th>

          <th> عملیات</th>
        </tr>
      </thead>
      <tbody>
        @if ( ViewBag.listp != null)
        {

        int i=1;
        @foreach (var item in ViewBag.listp)
        {

        <tr>
          <td></td>
          <td class="product-category"> @i</td>
          <td class="product-name">@item.TitleProductPro</td>
          <td class="product-category">@item.catname</td>

          <td class="product-category"> <img style="width: 60px;" src="~/fileupload/@item.ImageMainPro" alt=""> </td>
          <td class="product-category">@item.PricePro </td>
          <td class="product-category">@item.OfferPro</td>

          <td class="product-category">@item.Language </td>

          <td class="product-action">
            <div class="col-lg-3 col-md-3 mb-1">
              <div class="btn-group" role="group" aria-label="Basic example">
                <a href="/admin/product/update/@item.Id" class="btn btn-primary btn-sm">مشاهده</a>
                <a onclick="return confirm('آیا از حذف اطلاعات مطمن هستید؟')" href="/admin/product/del/@item.Id"
                  class="btn btn-danger btn-sm">حذف</a>
                <a class="btn btn-success  btn-sm" href="/admin/product/update/@item.Id">ویرایش</a>
              </div>
            </div>
          </td>
        </tr>
i++;
        }

        }








      </tbody>
    </table>
  </div>
  <!-- DataTable ends -->

  <!-- add new sidebar starts -->

  <!-- add new sidebar ends -->
</section>
<!-- Data list view end -->